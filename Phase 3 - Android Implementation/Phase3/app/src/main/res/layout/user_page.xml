<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Name"/>

        <TextView
            android:id="@+id/account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Account"/>
    </LinearLayout>

    <!-- Account Editor -->
    <Button
        android:id="@+id/edit_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/goto_courses_btn"
        android:text=" Edit Info "/>

    <!-- Section Info -->
    <Button
        android:id="@+id/goto_courses_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/goto_sections_btn"
        android:text=" Courses "/>

    <!-- Section Enrollment -->
    <Button
        android:id="@+id/goto_sections_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Sections"/>

    <!-- Mentoring -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goto_mentoring_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/goto_sections_btn"
        android:visibility="gone"
        android:text=" Mentor "/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/goto_mentoring_btn"
        android:text=" Log Out "/>

</RelativeLayout>